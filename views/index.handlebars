<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <img src="https://i.gifer.com/embedded/download/3gvJ.gif" width="310" height="210" alt="bob burgers">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
     {{!-- <h1 class="text-light">Burger of the Day</h1> --}}
      <div class="row border border-danger ml-5 bg-dark">
        <div class="col-8 col-sm-6">
         <img src="https://cdn-image.foodandwine.com/sites/default/files/styles/4_3_horizontal_-_1200x900/public/1508763556/bobs-burgers-new-restaurant-FT-BLOG1017.jpg?itok=KHX-8rCX" width="310" height="210" alt="burger of the day">
        </div>
        <div class="col-4 col-sm-6">
         <p class="text-center text-light"><b>Bob and Louise create hilarious puns for the burger of the day.</b></p>
         <p class="text-center text-light"><b>Try creating a burger of the day!</b></p>
          <div align="center">
         <form id="burger-form">
          <input class="form-control" id="name-input" placeholder="Burger of the Day"/>
          <br>
          <button class="btn btn-outline-danger submit-btn m-1" type="submit">Add Burger 🍔</button>
        </form>

   
      </div>
        </div>
      </div>
    </div>
  </div>
</div>

  
     

<div class="container m-5">
  <div class="row border border-danger bg-danger  p-3">
    <div class="col-12 col-sm-6  bg-dark">
      <h2 class="text-center text-light">Burger of the Day</h2>
      <ul class="list-group">
      {{!-- use handlebars to print cats that aren't eaten --}}
     {{#each burgerData}}
     {{#unless eaten}}

     

      <li class="list-group-item text-center text-light bg-dark border-light">
           <b>{{name}}</b>
        <span class="ml-auto">
          <div class="row my-3 justify-content-sm-center">
          <button 
          class="btn btn-outline-light update-burger"
          data-id="{{id}}"
          data-eaten="true">
          Eat Burger 🍔
          </button>
          {{!-- delete burger --}}
          <button
          class="btn btn-outline-warning delete-burger"
          data-id="{{id}}"
          >
          Delete Burger 🙅🏻‍
          </button>
          </div>
        </span>
      </li>
      {{/unless}}
      {{/each}}


      </ul>
    </div>

             {{!-- end inner left --}}
              {{!-- inner right --}}

        <div class="col-12 col-sm-6 bg-dark">
          <h2 class="text-center text-light">Burgers Eaten</h2>
            <ul class="list-group">
             {{!-- use handlebars to print cats that aren't eaten --}}
              {{#each burgerData}}
              {{#if eaten}}
             <li class="list-group-item bg-dark border-light text-light text-center">
               <b>{{name}}</b> 
               <span class="ml-auto">
                 {{!-- delete burger --}}
                 <div class="row justify-content-sm-center">
                 <button
                 class="btn btn-outline-warning delete-burger"
                 data-id="{{id}}">
                   Delete Burger 🙅🏻‍
                 </button>
                 </div>
               </span>
             </li>
             {{/if}}
             {{/each}}


            </ul>
        </div>




  </div>
</div>

