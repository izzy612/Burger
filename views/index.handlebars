<div class="container">
  <div class="row">
    <div class="col-sm-9 m-5">
     <h1 class="text-light">Burger of the Day</h1>
      <div class="row border border-dark ml-5 bg-warning">
        <div class="col-8 col-sm-6 pl-5">
         <img src="https://cdn.jwplayer.com/thumbs/XgMg5D68-720.jpg" width="200" height="150" alt="burger of the day">
        </div>
        <div class="col-4 col-sm-6">
         <p class="text-center"><b>This is a list of the special burgers of the day featured on the show Bob's Burgers, Bob and Louise create these hilarious puns. How many burgers would you eat?</b></p>
          <div align="center">
         <form id="burger-form">
          <input class="form-control" id="name-input" placeholder="Burger of the Day"/>
          <button class="btn btn-dark submit-btn" type="submit">Add Burger 🍔</button>
        </form>

   
      </div>
        </div>
      </div>
    </div>
  </div>
</div>

  
     

<div class="container m-5">
  <div class="row">
    <div class="col-12 col-md-6">
      <h2 class="text-center text-light">Burger of the Day</h2>
      <ul class="list-group">
      {{!-- use handlebars to print cats that aren't eaten --}}
     {{#each burgerData}}
     {{#unless eaten}}

     

      <li class="list-group-item text-center bg-warning border-dark">
           <b>{{name}}</b>
        <span class="ml-auto">
          <div class="row my-3 justify-content-md-center">
          <button 
          class="btn btn-dark update-burger"
          data-id="{{id}}"
          data-eaten="true">
          Eat Burger 🍔
          </button>
          {{!-- delete burger --}}
          <button
          class="btn btn-danger delete-burger"
          data-id="{{id}}"
          >
          Delete Burger 🙅🏻‍
          </button>
          </div>
        </span>
      </li>
      {{/unless}}
      {{/each}}


      </ul>
    </div>

             {{!-- end inner left --}}
              {{!-- inner right --}}

        <div class="col-12 col-md-6">
          <h2 class="text-center text-light">Burgers Eaten</h2>
            <ul class="list-group">
             {{!-- use handlebars to print cats that aren't eaten --}}
              {{#each burgerData}}
              {{#if eaten}}
             <li class="list-group-item bg-warning border-dark text-center">
               <b>{{name}}</b> 
               <span class="ml-auto">
                 {{!-- delete burger --}}
                 <div class="row justify-content-md-center">
                 <button
                 class="btn btn-danger delete-burger"
                 data-id="{{id}}">
                   Delete Burger 🙅🏻‍
                 </button>
                 </div>
               </span>
             </li>
             {{/if}}
             {{/each}}


            </ul>
        </div>




  </div>
</div>

<script src="assets/js/burger.js"></script>
